<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:EasySave.Presentation.ViewModels;assembly=Presentation"
        xmlns:appvm="clr-namespace:EasySave.Presentation.ViewModels;assembly=Presentation"
        xmlns:lottie="clr-namespace:Avalonia.Skia.Lottie;assembly=Lottie"
        mc:Ignorable="d" d:DesignWidth="1400" d:DesignHeight="860"
        x:Class="GUI.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="{Binding WindowTitle}"
        Icon="avares://EasySave/Assets/Brand/easysave-logo.png"
        MinWidth="1200" MinHeight="760"
        Width="1400" Height="860">

    <!-- Main shell: top header + content workspace -->
    <Grid Name="MainShellGrid" RowDefinitions="Auto,*" Margin="0">

        <!-- Top bar: branding, status, and quick preferences -->
                <Border Name="TopHeaderBar"
                Grid.Row="0"
                Background="{DynamicResource SurfaceDarkBrush}"
                BorderThickness="0,0,0,1"
                BorderBrush="{DynamicResource BorderBrush}"
                BoxShadow="0 8 16 0 #00000035"
                Padding="24,16">
            <Grid ColumnDefinitions="*,Auto" ColumnSpacing="16">
                <!-- Left block: app identity + global status -->
                <Grid Grid.Column="0"
                      Name="HeaderIdentityBlock"
                      ColumnDefinitions="Auto,*"
                      RowDefinitions="Auto,Auto"
                      ColumnSpacing="14"
                      RowSpacing="4">
                    <Image Grid.Column="1"
                           Grid.Row="0"
                           Source="avares://EasySave/Assets/Brand/easysave-full-logo.png"
                           Height="80"
                           Stretch="Uniform"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center" />
                    <!-- StatusMessage supprimé, tout passe dans le chat -->
                </Grid>

                <!-- Right block: settings menu -->
                <Button Grid.Column="1"
                        Name="SettingsMenuButton"
                        Classes="secondary settings-trigger"
                        Content="{Binding SettingsButtonLabel}"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Padding="16,8">
                <Button.Flyout>
                        <Flyout Placement="BottomEdgeAlignedRight"
                                FlyoutPresenterClasses="settings-flyout">
                            <Border Classes="settings-flyout-shell"
                                    MinWidth="360">
                                <Border x:DataType="vm:MainWindowViewModel"
                                        DataContext="{Binding #SettingsMenuButton.DataContext}"
                                        Classes="settings-flyout-card"
                                        Padding="18">
                                    <StackPanel Spacing="12">
                                        <TextBlock Text="{Binding SettingsMenuTitle, Mode=OneWay}" Classes="settings-menu-title" />

                                        <ItemsControl ItemsSource="{Binding SettingsItems, Mode=OneWay}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate x:DataType="appvm:SettingItemViewModel">
                                                    <Border Classes="settings-item-card" Margin="0,0,0,10">
                                                        <StackPanel Spacing="6">
                                                            <TextBlock Text="{Binding Label, Mode=OneWay}" Classes="settings-section-label" Margin="0" />
                                                            
                                                            <!-- Text input for business software and crypto extensions -->
                                                            <TextBox IsVisible="{Binding IsTextInput, Mode=OneWay}"
                                                                     Text="{Binding TextValue, Mode=TwoWay}"
                                                                     MinWidth="260"
                                                                     Watermark=""
                                                                     Classes="settings-textbox" />
                                                            
                                                            <!-- Dropdown for language and log format -->
                                                            <ComboBox IsVisible="{Binding !IsTextInput, Mode=OneWay}"
                                                                      Classes="settings-combo"
                                                                      MinWidth="260"
                                                                      ItemsSource="{Binding Options, Mode=OneWay}"
                                                                      SelectedItem="{Binding SelectedOption, Mode=TwoWay}">
                                                                <ComboBox.ItemTemplate>
                                                                    <DataTemplate x:DataType="appvm:SettingOptionViewModel">
                                                                        <TextBlock Text="{Binding Label, Mode=OneWay}"
                                                                                   FontWeight="SemiBold" />
                                                                    </DataTemplate>
                                                                </ComboBox.ItemTemplate>
                                                                <ComboBox.Styles>
                                                                    <Style Selector="ComboBoxItem">
                                                                        <Setter Property="Padding" Value="12,8" />
                                                                        <Setter Property="Background" Value="#132033" />
                                                                        <Setter Property="BorderBrush" Value="Transparent" />
                                                                        <Setter Property="BorderThickness" Value="1" />
                                                                        <Setter Property="CornerRadius" Value="8" />
                                                                        <Setter Property="Margin" Value="4,2" />
                                                                    </Style>
                                                                    <Style Selector="ComboBoxItem:pointerover">
                                                                        <Setter Property="Background" Value="#1C3048" />
                                                                        <Setter Property="BorderBrush" Value="#3F648A" />
                                                                    </Style>
                                                                    <Style Selector="ComboBoxItem:selected">
                                                                        <Setter Property="Background" Value="#23415F" />
                                                                        <Setter Property="BorderBrush" Value="#6E9ECB" />
                                                                    </Style>
                                                                </ComboBox.Styles>
                                                            </ComboBox>
                                                        </StackPanel>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </Border>
                            </Border>
                        </Flyout>
                    </Button.Flyout>
                </Button>
            </Grid>
        </Border>

        <!-- Main workspace: jobs list, details panel, assistant widget -->
        <Grid Name="ContentWorkspaceGrid"
              Grid.Row="1"
              Margin="24,20,24,24"
              ColumnDefinitions="2.3*,1.2*"
              RowDefinitions="*,Auto"
              ColumnSpacing="20"
              RowSpacing="20">

            <!-- Jobs module: actions + list -->
            <Border Name="JobsBoardCard"
                    Grid.Column="0"
                    Grid.Row="0"
                    Grid.RowSpan="2"
                    Classes="card">
                <Grid RowDefinitions="Auto,Auto,*">

                    <!-- Action toolbar:
                         Keep buttons in a single row and auto-scale down on smaller widths. -->
                    <Viewbox Name="JobsActionsViewbox"
                             Grid.Row="0"
                             Margin="0,0,0,18"
                             Stretch="Uniform"
                             StretchDirection="DownOnly"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top">
                        <StackPanel Name="JobsActionsPanel"
                                    Orientation="Horizontal"
                                    Spacing="10"
                                    HorizontalAlignment="Left">
                            <!-- Add new action buttons here to keep command layout consistent. -->
                            <Button Classes="primary toolbar-action"
                                    Content="{Binding NewJobButtonLabel}"
                                    Click="NewJob_Click" />
                            <Button Classes="secondary toolbar-action"
                                    Content="{Binding EditJobButtonLabel}"
                                    Click="EditJob_Click" />
                            <Button Classes="success toolbar-action"
                                    Content="{Binding ExecuteSelectedLabel}"
                                    Click="ExecuteSelected_Click" />
                            <Button Classes="success toolbar-action"
                                    Content="{Binding ExecuteAllLabel}"
                                    Click="ExecuteAll_Click" />
                            <Button Classes="danger toolbar-action"
                                    Content="{Binding DeleteSelectedLabel}"
                                    Click="DeleteSelected_Click" />
                        </StackPanel>
                    </Viewbox>

                    <!-- Jobs list header -->
                    <Border Grid.Row="1" Classes="card-header">
                        <Grid ColumnDefinitions="1.5*,3*,3*,1.2*" ColumnSpacing="12">
                            <TextBlock Grid.Column="0" Text="{Binding HeaderName}" Classes="header-cell" />
                            <TextBlock Grid.Column="1" Text="{Binding HeaderSource}" Classes="header-cell" />
                            <TextBlock Grid.Column="2" Text="{Binding HeaderDestination}" Classes="header-cell" />
                            <TextBlock Grid.Column="3" Text="{Binding HeaderType}" Classes="header-cell" />
                        </Grid>
                    </Border>

                    <!-- Jobs list content -->
                    <ScrollViewer Grid.Row="2"
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Auto">
                        <ListBox Name="JobsList"
                                 ItemsSource="{Binding DisplayJobs}"
                                 SelectionMode="Multiple"
                                 SelectionChanged="JobsList_SelectionChanged">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Classes="job-list-item-surface"
                                            Classes.running="{Binding IsRunning}"
                                            Padding="8,6,8,8">
                                        <Grid RowDefinitions="Auto,Auto"
                                              RowSpacing="6">
                                            <Grid Grid.Row="0"
                                                  ColumnDefinitions="1.5*,3*,3*,1.2*"
                                                  ColumnSpacing="12">
                                                <TextBlock Grid.Column="0"
                                                           Text="{Binding DisplayName}"
                                                           TextWrapping="NoWrap"
                                                           TextTrimming="CharacterEllipsis"
                                                           FontWeight="SemiBold" />
                                                <TextBlock Grid.Column="1"
                                                           Text="{Binding SourceDirectory}"
                                                           TextWrapping="NoWrap"
                                                           TextTrimming="CharacterEllipsis"
                                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                                           FontSize="13" />
                                                <TextBlock Grid.Column="2"
                                                           Text="{Binding TargetDirectory}"
                                                           TextWrapping="NoWrap"
                                                           TextTrimming="CharacterEllipsis"
                                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                                           FontSize="13" />
                                                <StackPanel Grid.Column="3"
                                                            Orientation="Horizontal"
                                                            Spacing="8"
                                                            HorizontalAlignment="Left">
                                                    <Border Classes="type-pill" HorizontalAlignment="Left">
                                                        <TextBlock Text="{Binding Type}" Classes="type-pill-text" />
                                                    </Border>
                                                    <Border Classes="execution-state-token success"
                                                            IsVisible="{Binding IsCompletedSuccess}">
                                                        <TextBlock Text="✓" Classes="execution-state-token-glyph" />
                                                    </Border>
                                                    <Border Classes="execution-state-token error"
                                                            IsVisible="{Binding HasExecutionError}">
                                                        <TextBlock Text="!" Classes="execution-state-token-glyph" />
                                                    </Border>
                                                </StackPanel>
                                            </Grid>

                                            <Grid Grid.Row="1"
                                                  IsVisible="{Binding IsRunning}"
                                                  ColumnDefinitions="*,Auto"
                                                  ColumnSpacing="10">
                                                <ProgressBar Grid.Column="0"
                                                             Value="{Binding ExecutionProgress}"
                                                             Maximum="100"
                                                             Height="5"
                                                             CornerRadius="3"
                                                             Foreground="{DynamicResource PrimaryBrush}" />
                                                <TextBlock Grid.Column="1"
                                                           Text="{Binding ExecutionProgress, StringFormat='{}{0:0.0}%'}"
                                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                                           FontSize="11"
                                                           VerticalAlignment="Center" />
                                            </Grid>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Details module: selected job summary + runtime status -->
            <Border Name="JobDetailsCard"
                    Grid.Column="1"
                    Grid.Row="0"
                    Classes="card">
                <Grid RowDefinitions="Auto,Auto,*"
                      RowSpacing="8">
                    <TextBlock Grid.Row="0"
                               Text="{Binding JobDetailsTitle}"
                               Classes="subtitle"
                               Margin="0,0,0,2" />

                    <TextBlock Grid.Row="1"
                               Text="{Binding JobDetailsNoSelection}"
                               IsVisible="{Binding !HasSelection}"
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               TextAlignment="Center"
                               VerticalAlignment="Center" />

                    <Border Grid.Row="1"
                            BorderThickness="0,1,0,0"
                            BorderBrush="{DynamicResource BorderBrush}"
                            Padding="0,8,0,0"
                            IsVisible="{Binding HasSelection}">
                        <StackPanel Spacing="4">
                            <!-- Row 1: job identity -->
                            <Grid ColumnDefinitions="*,Auto"
                                  ColumnSpacing="10">
                                <TextBlock Grid.Column="0"
                                           Text="{Binding SelectedJobName}"
                                           FontWeight="SemiBold"
                                           TextWrapping="NoWrap"
                                           TextTrimming="CharacterEllipsis" />
                                <Border Grid.Column="1"
                                        Classes="type-pill"
                                        HorizontalAlignment="Right">
                                    <TextBlock Text="{Binding SelectedJobType}" Classes="type-pill-text" />
                                </Border>
                            </Grid>

                            <!-- Row 2: runtime summary -->
                            <Grid ColumnDefinitions="*,Auto"
                                  ColumnSpacing="10"
                                  IsVisible="{Binding ShowExecutionDetails}">
                                <TextBlock Grid.Column="0"
                                           Text="{Binding JobStatusText}"
                                           Foreground="{Binding JobStatusColor}"
                                           FontWeight="SemiBold"
                                           FontSize="13" />
                                <TextBlock Grid.Column="1"
                                           Text="{Binding JobProgress, StringFormat='{}{0:0.0}%'}"
                                           Foreground="{DynamicResource PrimaryBrush}"
                                           FontWeight="SemiBold"
                                           FontSize="13" />
                            </Grid>
                            <ProgressBar Value="{Binding JobProgress}"
                                         Maximum="100"
                                         Height="6"
                                         CornerRadius="3"
                                         Foreground="{DynamicResource PrimaryBrush}"
                                         IsVisible="{Binding ShowExecutionDetails}" />
                        </StackPanel>
                    </Border>

                    <ScrollViewer Grid.Row="2"
                                  IsVisible="{Binding HasSelection}"
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled">
                        <StackPanel Spacing="8">
                            <Grid ColumnDefinitions="Auto,*"
                                  ColumnSpacing="8">
                                <TextBlock Grid.Column="0" Text="{Binding LabelSourceFolder}" Classes="label" />
                                <TextBlock Grid.Column="1"
                                           Text="{Binding SelectedJobSource}"
                                           TextWrapping="NoWrap"
                                           TextTrimming="CharacterEllipsis"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           FontSize="12" />
                            </Grid>

                            <Grid ColumnDefinitions="Auto,*"
                                  ColumnSpacing="8">
                                <TextBlock Grid.Column="0" Text="{Binding LabelDestinationFolder}" Classes="label" />
                                <TextBlock Grid.Column="1"
                                           Text="{Binding SelectedJobTarget}"
                                           TextWrapping="NoWrap"
                                           TextTrimming="CharacterEllipsis"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           FontSize="12" />
                            </Grid>

                            <Border BorderThickness="0,1,0,0"
                                    BorderBrush="{DynamicResource BorderBrush}"
                                    Padding="0,8,0,0"
                                    IsVisible="{Binding ShowExecutionDetails}">
                                <Grid ColumnDefinitions="Auto,*,Auto,*"
                                      RowDefinitions="Auto,Auto,Auto,Auto"
                                      ColumnSpacing="8"
                                      RowSpacing="6">
                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding JobDetailsTotalFiles}" Classes="label" />
                                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding JobTotalFiles}" FontWeight="SemiBold" FontSize="12" />
                                    <TextBlock Grid.Row="0" Grid.Column="2" Text="{Binding JobDetailsFilesRemaining}" Classes="label" />
                                    <TextBlock Grid.Row="0"
                                               Grid.Column="3"
                                               Text="{Binding JobFilesRemaining}"
                                               Foreground="{DynamicResource SuccessBrush}"
                                               FontWeight="SemiBold"
                                               FontSize="12" />

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="{Binding JobDetailsTotalSize}" Classes="label" />
                                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding JobTotalSize}" FontWeight="SemiBold" FontSize="12" />
                                    <TextBlock Grid.Row="1" Grid.Column="2" Text="{Binding JobDetailsSizeRemaining}" Classes="label" />
                                    <TextBlock Grid.Row="1"
                                               Grid.Column="3"
                                               Text="{Binding JobSizeRemaining}"
                                               Foreground="{DynamicResource SuccessBrush}"
                                               FontWeight="SemiBold"
                                               FontSize="12" />

                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="{Binding JobDetailsCurrentFile}" Classes="label" />
                                    <TextBlock Grid.Row="2"
                                               Grid.Column="1"
                                               Grid.ColumnSpan="3"
                                               Text="{Binding JobCurrentFile}"
                                               TextWrapping="NoWrap"
                                               TextTrimming="CharacterEllipsis"
                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                               FontSize="11"
                                               FontFamily="Consolas" />

                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="{Binding JobDetailsLastUpdate}" Classes="label" />
                                    <TextBlock Grid.Row="3"
                                               Grid.Column="1"
                                               Grid.ColumnSpan="3"
                                               Text="{Binding JobLastUpdate}"
                                               FontFamily="Consolas"
                                               FontSize="11"
                                               TextWrapping="NoWrap"
                                               TextTrimming="CharacterEllipsis" />
                                </Grid>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Assistant module: animated widget + live message -->
            <Border Name="AssistantWidgetCard"
                    Grid.Column="1"
                    Grid.Row="1"
                    Classes="card chat-card"
                    Padding="18,16"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Bottom"
                    MinHeight="156"
                    MaxHeight="320">
                <Grid RowDefinitions="Auto,Auto" RowSpacing="14">
                    <StackPanel Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
                        <TextBlock Text="{Binding CatWidgetTitle}"
                                   FontSize="15"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextPrimaryBrush}" />
                        <Border Classes="live-pill">
                            <TextBlock Text="LIVE" Classes="live-pill-text" />
                        </Border>
                    </StackPanel>

                    <Grid Grid.Row="1" ColumnDefinitions="Auto,*" ColumnSpacing="14">
                        <Border Classes="assistant-media-card"
                                Width="108"
                                Height="108"
                                Padding="8"
                                ClipToBounds="True">
                            <lottie:Lottie Path="avares://EasySave/Assets/Animations/cat%20default.json"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Width="92"
                                           Height="92"
                                           RenderTransformOrigin="0.5,0.5"
                                           RenderTransform="scale(0.98)"
                                           Stretch="Uniform" />
                        </Border>

                        <Border Grid.Column="1" Classes="assistant-message-card" Padding="14,12" MinHeight="108">
                            <ScrollViewer VerticalScrollBarVisibility="Auto"
                                          HorizontalScrollBarVisibility="Disabled"
                                          MaxHeight="200">
                                <TextBlock Text="{Binding CatSpeech}"
                                           TextWrapping="Wrap"
                                           FontSize="13"
                                           Foreground="{DynamicResource TextPrimaryBrush}" />
                            </ScrollViewer>
                        </Border>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
