<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="GUI.App"
             RequestedThemeVariant="Dark">

    <Application.Styles>
        <FluentTheme />

        <!-- Design tokens: centralize colors/gradients here for future theme iterations. -->
        <Style>
            <Style.Resources>
                <!-- Accent colors -->
                <SolidColorBrush x:Key="PrimaryBrush">#F18A3A</SolidColorBrush>
                <SolidColorBrush x:Key="PrimaryHoverBrush">#FFAA62</SolidColorBrush>
                <SolidColorBrush x:Key="SuccessBrush">#36B48F</SolidColorBrush>
                <SolidColorBrush x:Key="SuccessHoverBrush">#53CDAA</SolidColorBrush>
                <SolidColorBrush x:Key="DangerBrush">#D45B65</SolidColorBrush>
                <SolidColorBrush x:Key="DangerHoverBrush">#E57A82</SolidColorBrush>

                <!-- Neutral surfaces and borders -->
                <SolidColorBrush x:Key="SurfaceBrush">#161B22</SolidColorBrush>
                <SolidColorBrush x:Key="SurfaceDarkBrush">#10151D</SolidColorBrush>
                <SolidColorBrush x:Key="SurfaceMutedBrush">#1B232E</SolidColorBrush>
                <SolidColorBrush x:Key="CardBrush">#161B22</SolidColorBrush>
                <SolidColorBrush x:Key="CardDarkBrush">#10151D</SolidColorBrush>
                <SolidColorBrush x:Key="BorderBrush">#2C3745</SolidColorBrush>
                <SolidColorBrush x:Key="BorderStrongBrush">#4A5D73</SolidColorBrush>

                <!-- Typography colors -->
                <SolidColorBrush x:Key="TextPrimaryBrush">#F3F6FA</SolidColorBrush>
                <SolidColorBrush x:Key="TextSecondaryBrush">#A7B2C2</SolidColorBrush>

                <!-- Global backgrounds -->
                <LinearGradientBrush x:Key="WindowBackgroundBrush" StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#07090D" Offset="0" />
                    <GradientStop Color="#0F131C" Offset="0.45" />
                    <GradientStop Color="#13233D" Offset="0.78" />
                    <GradientStop Color="#090D14" Offset="1" />
                </LinearGradientBrush>

                <!-- Component gradients -->
                <LinearGradientBrush x:Key="PrimaryGradientBrush" StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#1D2735" Offset="0" />
                    <GradientStop Color="#263649" Offset="1" />
                </LinearGradientBrush>

                <LinearGradientBrush x:Key="PrimaryGradientHoverBrush" StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#253348" Offset="0" />
                    <GradientStop Color="#2D415A" Offset="1" />
                </LinearGradientBrush>

                <LinearGradientBrush x:Key="SecondaryGradientBrush" StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#1A2431" Offset="0" />
                    <GradientStop Color="#233142" Offset="1" />
                </LinearGradientBrush>

                <LinearGradientBrush x:Key="SecondaryGradientHoverBrush" StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#223042" Offset="0" />
                    <GradientStop Color="#2A3D55" Offset="1" />
                </LinearGradientBrush>

                <LinearGradientBrush x:Key="SuccessGradientBrush" StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#19262A" Offset="0" />
                    <GradientStop Color="#23343A" Offset="1" />
                </LinearGradientBrush>

                <LinearGradientBrush x:Key="SuccessGradientHoverBrush" StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#1E2D32" Offset="0" />
                    <GradientStop Color="#294047" Offset="1" />
                </LinearGradientBrush>

                <LinearGradientBrush x:Key="DangerGradientBrush" StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#241F27" Offset="0" />
                    <GradientStop Color="#332A36" Offset="1" />
                </LinearGradientBrush>

                <LinearGradientBrush x:Key="DangerGradientHoverBrush" StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#2A232D" Offset="0" />
                    <GradientStop Color="#3A3040" Offset="1" />
                </LinearGradientBrush>

                <LinearGradientBrush x:Key="ChatCardBackgroundBrush" StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#0F141C" Offset="0" />
                    <GradientStop Color="#111A27" Offset="0.55" />
                    <GradientStop Color="#142B47" Offset="1" />
                </LinearGradientBrush>
            </Style.Resources>
        </Style>

        <!-- Base shell -->
        <Style Selector="Window">
            <Setter Property="Background" Value="{DynamicResource WindowBackgroundBrush}" />
            <Setter Property="FontFamily" Value="Segoe UI Variable Text" />
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
        </Style>

        <!-- Layout cards -->
        <Style Selector="Border.card">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
            <Setter Property="CornerRadius" Value="16" />
            <Setter Property="Padding" Value="20" />
            <Setter Property="BoxShadow" Value="0 16 30 0 #00000052" />
        </Style>

        <Style Selector="Border.chat-card">
            <Setter Property="Background" Value="{DynamicResource ChatCardBackgroundBrush}" />
            <Setter Property="BorderBrush" Value="#4A6685" />
            <Setter Property="BoxShadow" Value="0 22 36 0 #03112272" />
        </Style>

        <!-- Reusable card fragments -->
        <Style Selector="Border.card-header">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0,0,0,1" />
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
            <Setter Property="Padding" Value="0,0,0,14" />
            <Setter Property="Margin" Value="0,0,0,14" />
        </Style>

        <Style Selector="Border.brand-badge">
            <Setter Property="Background" Value="{DynamicResource PrimaryGradientBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="#95C7FF" />
            <Setter Property="CornerRadius" Value="14" />
            <Setter Property="BoxShadow" Value="0 12 22 0 #1239655F" />
        </Style>

        <!-- Branding text -->
        <Style Selector="TextBlock.brand-text">
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Foreground" Value="#F8FBFF" />
        </Style>

        <!-- Base button style:
             Hover uses color/border only (no scale) to avoid sticky visual states. -->
        <Style Selector="Button">
            <Setter Property="CornerRadius" Value="12" />
            <Setter Property="Padding" Value="18,10" />
            <Setter Property="MinHeight" Value="42" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Background" Value="{DynamicResource SecondaryGradientBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="RenderTransform" Value="scale(1)" />
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Background" Duration="0:0:0.15" />
                    <BrushTransition Property="BorderBrush" Duration="0:0:0.15" />
                </Transitions>
            </Setter>
        </Style>

        <Style Selector="Button:disabled">
            <Setter Property="Opacity" Value="0.55" />
            <Setter Property="Cursor" Value="Arrow" />
        </Style>

        <!-- Toolbar-specific button spacing (shared by jobs actions). -->
        <Style Selector="Button.toolbar-action">
            <Setter Property="Margin" Value="0" />
            <Setter Property="MinWidth" Value="170" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
        </Style>

        <!-- Button variants -->
        <Style Selector="Button.primary">
            <Setter Property="Background" Value="{DynamicResource PrimaryGradientBrush}" />
            <Setter Property="BorderBrush" Value="#7AAEE8" />
            <Setter Property="Foreground" Value="#F2F8FF" />
        </Style>

        <Style Selector="Button.primary:pointerover">
            <Setter Property="Background" Value="{DynamicResource PrimaryGradientHoverBrush}" />
            <Setter Property="BorderBrush" Value="#9ECAF8" />
        </Style>

        <Style Selector="Button.primary:pressed">
            <Setter Property="Background" Value="#1B2634" />
            <Setter Property="BorderBrush" Value="#6B9AD0" />
        </Style>

        <Style Selector="Button.secondary">
            <Setter Property="Background" Value="{DynamicResource SecondaryGradientBrush}" />
            <Setter Property="BorderBrush" Value="#6B7C93" />
            <Setter Property="Foreground" Value="#EBF1F9" />
        </Style>

        <Style Selector="Button.secondary:pointerover">
            <Setter Property="Background" Value="{DynamicResource SecondaryGradientHoverBrush}" />
            <Setter Property="BorderBrush" Value="#869BB9" />
        </Style>

        <Style Selector="Button.secondary:pressed">
            <Setter Property="Background" Value="#1A2633" />
            <Setter Property="BorderBrush" Value="#5E6F84" />
        </Style>

        <Style Selector="Button.success">
            <Setter Property="Background" Value="{DynamicResource SuccessGradientBrush}" />
            <Setter Property="BorderBrush" Value="#5ED5B5" />
            <Setter Property="Foreground" Value="#F4FFFC" />
        </Style>

        <Style Selector="Button.success:pointerover">
            <Setter Property="Background" Value="{DynamicResource SuccessGradientHoverBrush}" />
            <Setter Property="BorderBrush" Value="#8EF0D7" />
        </Style>

        <Style Selector="Button.success:pressed">
            <Setter Property="Background" Value="#18252A" />
            <Setter Property="BorderBrush" Value="#4BBC9E" />
        </Style>

        <Style Selector="Button.danger">
            <Setter Property="Background" Value="{DynamicResource DangerGradientBrush}" />
            <Setter Property="BorderBrush" Value="#E47E88" />
            <Setter Property="Foreground" Value="#FFF6F7" />
        </Style>

        <Style Selector="Button.danger:pointerover">
            <Setter Property="Background" Value="{DynamicResource DangerGradientHoverBrush}" />
            <Setter Property="BorderBrush" Value="#F4A0A8" />
        </Style>

        <Style Selector="Button.danger:pressed">
            <Setter Property="Background" Value="#221C24" />
            <Setter Property="BorderBrush" Value="#CC6A73" />
        </Style>

        <Style Selector="Button.outline">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="{DynamicResource BorderStrongBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
        </Style>

        <Style Selector="Button.outline:pointerover">
            <Setter Property="Background" Value="#1E2734" />
            <Setter Property="BorderBrush" Value="#6A89AC" />
        </Style>

        <!-- Form controls -->
        <Style Selector="TextBox">
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Padding" Value="12,10" />
            <Setter Property="Background" Value="{DynamicResource SurfaceMutedBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
        </Style>

        <Style Selector="TextBox:focus">
            <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}" />
            <Setter Property="BorderThickness" Value="2" />
        </Style>

        <Style Selector="ComboBox">
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Padding" Value="12,8" />
            <Setter Property="Background" Value="{DynamicResource SurfaceMutedBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
        </Style>

        <Style Selector="ComboBox:focus">
            <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}" />
        </Style>

        <!-- Feedback and progress -->
        <Style Selector="ProgressBar">
            <Setter Property="Background" Value="#243142" />
            <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}" />
            <Setter Property="CornerRadius" Value="5" />
        </Style>

        <!-- Data list styling -->
        <Style Selector="ListBox">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>

        <Style Selector="ListBoxItem">
            <Setter Property="Padding" Value="12,10" />
            <Setter Property="Margin" Value="0,0,0,6" />
            <Setter Property="CornerRadius" Value="9" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Background" Duration="0:0:0.15" />
                    <BrushTransition Property="BorderBrush" Duration="0:0:0.15" />
                </Transitions>
            </Setter>
        </Style>

        <Style Selector="ListBoxItem:pointerover">
            <Setter Property="Background" Value="#1C2531" />
            <Setter Property="BorderBrush" Value="#3A4A5E" />
        </Style>

        <Style Selector="ListBoxItem:selected">
            <Setter Property="Background" Value="#203248" />
            <Setter Property="BorderBrush" Value="#5A9DE3" />
        </Style>

        <Style Selector="ListBoxItem:selected:pointerover">
            <Setter Property="Background" Value="#24405C" />
            <Setter Property="BorderBrush" Value="#6DACF0" />
        </Style>

        <!-- Status and semantic badges -->
        <Style Selector="Border.type-pill">
            <Setter Property="Background" Value="#1F334C" />
            <Setter Property="BorderBrush" Value="#50739A" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="999" />
            <Setter Property="Padding" Value="10,4" />
        </Style>

        <Style Selector="TextBlock.type-pill-text">
            <Setter Property="Foreground" Value="#B8DCFF" />
            <Setter Property="FontSize" Value="11" />
            <Setter Property="FontWeight" Value="SemiBold" />
        </Style>

        <Style Selector="Border.live-pill">
            <Setter Property="Background" Value="#3B8EFF22" />
            <Setter Property="BorderBrush" Value="#6FB1FF70" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="999" />
            <Setter Property="Padding" Value="8,2" />
        </Style>

        <Style Selector="TextBlock.live-pill-text">
            <Setter Property="Foreground" Value="#B8D9FF" />
            <Setter Property="FontSize" Value="10" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>

        <!-- Assistant widget visuals -->
        <Style Selector="Border.assistant-media-card">
            <Setter Property="Background" Value="#182331" />
            <Setter Property="BorderBrush" Value="#34506F" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="14" />
        </Style>

        <Style Selector="Border.assistant-message-card">
            <Setter Property="Background" Value="#131A24" />
            <Setter Property="BorderBrush" Value="#314154" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="12" />
        </Style>

        <!-- Typography scale -->
        <Style Selector="TextBlock.title">
            <Setter Property="FontSize" Value="28" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
        </Style>

        <Style Selector="TextBlock.subtitle">
            <Setter Property="FontSize" Value="22" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
        </Style>

        <Style Selector="TextBlock.label">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
            <Setter Property="Margin" Value="0,0,0,6" />
        </Style>

        <Style Selector="TextBlock.header-cell">
            <Setter Property="FontSize" Value="11" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
        </Style>
    </Application.Styles>
</Application>
